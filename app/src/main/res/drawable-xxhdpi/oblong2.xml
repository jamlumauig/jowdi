<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFF98"
                android:startColor="#D79014" />
            <corners
                android:bottomLeftRadius="100dp"
                android:topLeftRadius="100dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="0dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#21BDBD"
                android:endColor="#A7BAAC"
                android:angle="270"/>
            <corners
                android:bottomLeftRadius="100dp"
                android:topLeftRadius="100dp" />
        </shape>
    </item>
</layer-list>