<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#362F2D" />
            <corners
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp" />
        </shape>
    </item>

    <item
        android:bottom="7dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5D4B1" />
            <corners
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp" />
            <stroke
                android:width="2dp"
                android:color="#D58000" />
        </shape>
    </item>
</layer-list>